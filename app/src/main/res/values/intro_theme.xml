<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="IntroTheme" parent="Theme.Material3.DayNight.NoActionBar">

        <item name="colorPrimary">@color/intro_primary</item>
        <item name="colorPrimaryVariant">@color/intro_primary_variant</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSurface">@color/backgroundAlertDialog</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorOnSurfaceVariant">@color/textAlertDialog</item>

        <item name="colorSecondary">@color/intro_secondary</item>
        <item name="colorSecondaryVariant">@color/intro_secondary_variant</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>

        <item name="android:windowBackground">@color/intro_primary</item>
        <item name="android:textColor">@color/app_content_color</item>

    </style>

    <style name="ShapeAppearanceOverlayButton" parent="">
        <item name="cornerSize">50%</item>
        <item name="cornerFamily">rounded</item>
        <item name="useMaterialThemeColors">true</item>
    </style>

    <style name="RoundedImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">24dp</item>
    </style>
</resources>